}

###

@account_number = "69472702"

# Create deposit
POST {{base_url}}/accounts/deposit
Content-Type: application/json

{
    "accountNumber": {{account_number}},
    "amount": 100
}

###

# Create withdraw
POST {{base_url}}/accounts/withdraw
Content-Type: application/json

{
    "accountNumber": {{account_number}},
    "amount": 50
}

###

# Create transfer
@from_account_number = "69472702"
